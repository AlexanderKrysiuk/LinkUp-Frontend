{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"rootDir": ".",
		"skipLibCheck": true,
		"outDir": "dist",
		"removeComments": true,
		"allowJs": true,
		"types": [
			"vitest/globals",
			"vite/client",
			"vite-plugin-svgr/client",
			"@types/react",
			"jest"
		],
		"paths": {
			"*": [
				"./node_modules/*",
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@layouts/*": [
				"./src/layouts/*"
			],
			"@middleware/*": [
				"./src/middleware/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@assets/*": [
				"./src/assets/*"
			],
			"@scripts/*": [
				"./src/scripts/*"
			],
			"@icons/*": [
				"./src/assets/icons/*"
			],
			"@contexts/*": [
				"./src/contexts/*"
			],
		},
		/* Bundler mode */
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowUnreachableCode": false,
		"noImplicitOverride": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
	},
	"include": [
		"./src/**/*",
		"src/scripts/**/*",
	],
	"exclude": [
		"node_modules",
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}